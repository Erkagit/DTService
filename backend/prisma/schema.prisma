generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  orders    Order[]
  preOrders PreOrder[]
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  name            String
  password        String?   
  role            Role
  companyId       Int?
  company         Company?  @relation(fields: [companyId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  createdOrders   Order[]   @relation("CreatedBy")
  assignedOrders  Order[]   @relation("AssignedTo")
}

enum Role {
  ADMIN
  CLIENT_ADMIN
}

model Device {
  id        Int       @id @default(autoincrement())
  deviceId  String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  vehicles  Vehicle[]
}

model Vehicle {
  id          Int             @id @default(autoincrement())
  plateNo     String          @unique
  driverName  String
  driverPhone String
  deviceId    Int?
  device      Device?         @relation(fields: [deviceId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  orders      Order[]
  pings       LocationPing[]
}

model Order {
  id           Int      @id @default(autoincrement())
  code         String   @unique
  companyId    Int
  company      Company  @relation(fields: [companyId], references: [id])
  origin       String
  destination  String
  vehicleId    Int?
  vehicle      Vehicle? @relation(fields: [vehicleId], references: [id])
  status       OrderStatus @default(PENDING)
  createdById  Int
  createdBy    User     @relation("CreatedBy", fields: [createdById], references: [id])
  assignedToId Int?
  assignedTo   User?    @relation("AssignedTo", fields: [assignedToId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  statusHistory OrderStatusHistory[]
  preOrders     PreOrder[]
}

// =====================
// PreOrder Model - Урьдчилсан захиалга
// =====================
model PreOrder {
  id        Int      @id @default(autoincrement())
  
  // 1. Order Note - Захиалгын тэмдэглэл
  companyId       Int?      // Компани
  company         Company?  @relation(fields: [companyId], references: [id])
  pickupAddress   String?   // Ачаа авах хаяг
  deliveryAddress String?   // Хүргэх хаяг
  name            String    // Нэр
  weight          Float?    // Жин (кг)
  dimension       String?   // Хэмжээ
  
  // 2. Order Price - Үнэ
  loadingCost         Float?  // Ачилт
  transportCost       Float?  // Тээвэр
  transshipmentCost   Float?  // Шилжүүлэн ачилт
  exportCustomsCost   Float?  // Экспорт гааль
  mongolTransportCost Float?  // Монгол тээвэр
  importCustomsCost   Float?  // Импорт гааль
  profit              Float?  // Ашиг
  expense             Float?  // Зардал
  totalAmount         Float?  // Нийт дүн
  
  // 3. Teever - Тээвэр
  invoice             Boolean           @default(false)  // Invoice байгаа эсэх
  packageList         Boolean           @default(false)  // Package list байгаа эсэх
  originDoc           Boolean           @default(false)  // Origin байгаа эсэх
  vehicleType         VehicleType       @default(DEFAULT)  // Машин төрөл
  foreignVehicleCount Int?              // Гадаад машин тоо
  mongolVehicleCount  Int?              // Монгол машиний тоо
  trailerType         TrailerType?      // Чиргүүл төрөл
  hasContainer        ContainerOption   @default(NO)  // Чингэлэг байгаа эсэх
  containerNumber     String?           // Чингэлэгний дугаар (hasContainer = YES үед)
  
  // 4. Tulbur - Төлбөр
  invoiceSent         Boolean           @default(false)  // Нэхэмжлэл явуулсан эсэх
  paymentReceived     Boolean           @default(false)  // Төлбөр төлөгдсөн эсэх
  idleTime            Boolean           @default(false)  // Сул зогсолт
  transportDone       Boolean           @default(false)  // Тээвэр
  
  // Relations
  orderId   Int?
  order     Order?   @relation(fields: [orderId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Машин төрөл - Vehicle Type Enum
enum VehicleType {
  GIT       // Гит
  DEFAULT   // Энгийн
  TIR       // ТИР
}

// Чиргүүл төрөл - Trailer Type Enum
enum TrailerType {
  TENT      // Тент
  HURGUUR   // Хүргүүр
  ZADGAI    // Задгай
  CHINGELEG // Чингэлэг
}

// Чингэлэг байгаа эсэх - Container Option Enum
enum ContainerOption {
  YES
  NO
}

enum OrderStatus {
  PENDING               // Хүлээгдэж байна
  LOADING               // Ачилт хийгдэж байна
  TRANSFER_LOADING      // Шилжүүлэн ачилт
  CN_EXPORT_CUSTOMS     // Хятадын экспорт гааль
  MN_IMPORT_CUSTOMS     // Монгол импорт гааль
  IN_TRANSIT            // Хүргэлт замдаа
  ARRIVED_AT_SITE       // Буулгах хаягт ирсэн
  UNLOADED              // Ачаа буусан
  RETURN_TRIP           // Буцах хүргэлт
  MN_EXPORT_RETURN      // Монголын экспорт (буцах)
  CN_IMPORT_RETURN      // Хятадын импорт (буцах)
  TRANSFER              // Шилжүүлэн ачилт (дундах)
  COMPLETED             // Дууссан
  CANCELLED             // Цуцлагдсан
}

model OrderStatusHistory {
  id        Int         @id @default(autoincrement())
  orderId   Int
  order     Order       @relation(fields: [orderId], references: [id])
  status    OrderStatus
  note      String?
  createdAt DateTime    @default(now())
}

model LocationPing {
  id        Int      @id @default(autoincrement())
  vehicleId Int
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  lat       Float
  lng       Float
  speedKph  Float?
  heading   Float?
  at        DateTime @default(now())
}
